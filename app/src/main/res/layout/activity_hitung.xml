<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haribdncc.luasprismasegi4.HitungActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Hasil Luas Prisma Segi Empat"
        android:layout_gravity="center"
        android:textSize="25sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/panjang_alas"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Panjang Alas : "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/taruh_panjang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/panjang_alas"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/lebar_alas"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Lebar Alas : "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/taruh_lebar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/lebar_alas"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tinggi_prisma"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Tinggi Prisma : "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/taruh_tinggi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/tinggi_prisma"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/luas_prisma"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Luas Prisma : "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/taruh_luas"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/luas_prisma"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnkembali"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="Kembali"/>
</LinearLayout>
